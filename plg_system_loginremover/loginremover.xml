<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
    <name>PLG_SYSTEM_LOGINREMOVER</name>
    <author>Daniel McNulty - Cane Tree Corp</author>
    <creationDate>November 2025</creationDate>
    <copyright>Copyright (C) 2025 Cane Tree Corp. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>support@canetree.com</authorEmail>
    <authorUrl>https://canetree.com</authorUrl>
    <version>1.0.0</version>
    <description>PLG_SYSTEM_LOGINREMOVER_XML_DESCRIPTION</description>

    <namespace path="src">Joomla\Plugin\System\LoginRemover</namespace>

    <files>
        <folder plugin="loginremover">services</folder>
        <folder>src</folder>
        <folder>language</folder>
    </files>

    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_system_loginremover.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_system_loginremover.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="remove_forgot_password"
                    type="radio"
                    label="PLG_SYSTEM_LOGINREMOVER_REMOVE_FORGOT_PASSWORD"
                    description="PLG_SYSTEM_LOGINREMOVER_REMOVE_FORGOT_PASSWORD_DESC"
                    default="1"
                    class="btn-group btn-group-yesno"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field
                    name="remove_forgot_username"
                    type="radio"
                    label="PLG_SYSTEM_LOGINREMOVER_REMOVE_FORGOT_USERNAME"
                    description="PLG_SYSTEM_LOGINREMOVER_REMOVE_FORGOT_USERNAME_DESC"
                    default="1"
                    class="btn-group btn-group-yesno"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field
                    name="remove_create_account"
                    type="radio"
                    label="PLG_SYSTEM_LOGINREMOVER_REMOVE_CREATE_ACCOUNT"
                    description="PLG_SYSTEM_LOGINREMOVER_REMOVE_CREATE_ACCOUNT_DESC"
                    default="0"
                    class="btn-group btn-group-yesno"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>